.tab-content
  #beers.tab-pane.active
    %table.table.table-striped
      %tr
        %th Name
        %th ABV
        %th Style
        %th Brewery
        - if signed_in?
          %th
      - beers.each do |beer|
        %tr
          %td= beer.name
          %td= beer.abv
          %td= beer.style.try(:name) || "Unknown"
          %td= beer.breweries.map { |brewery| link_to brewery.name, brewery_path(brewery.slug) }.join(", ").html_safe
          - if signed_in?
            %td.beer-buttons
              .btn-group.beer-actions
                != action_buttons(beer)

    .center
      = paginate beers unless params[:action] == 'welcome'

